<div class="container">
	<div id="div-alert" class="alert alert-error"></div>

	<form id="form-unlock" class="form-signin">
		<h2 class="form-signin-heading"><%= @text[:locked_title] %></h2>

		<input id="input-password" class="input-block-level" type="password" placeholder="<%= @text[:password] %>">

		<% unless @embed %>
		<label><input id="input-remember" type="checkbox" checked="checked" /> <%= @text[:remember_dropbox_credentials] %></label>
		<% end %>

		<button id="button-unlock" type="submit" class="btn btn-primary" data-loading-text="<%= @text[:button_unlock_decrypt] %>">
			<i class="icon-lock"></i> <%= @text[:button_unlock] %>
		</button>
	</form>
</div>
