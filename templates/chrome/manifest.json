{
	"name": "Cryptobox",
	"version": "<%= Cryptobox::VERSION %>",
	"manifest_version": 2,
	"description": "Cryptobox",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"background" : {
		"scripts": ["background.js"]
	},

	"content_scripts":
	[
	{
		"all_frames": true,
		"matches": [ "http://*/*", "https://*/*" ],
		"js": ["content.js"],
		"run_at": "document_end"
	}
	],

	"permissions": [
		"tabs",
		"clipboardWrite"
	]
}
